---
import Layout from "../../../layouts/Layout.astro";
import { SITE_DOMAIN, SITE_TITLE } from "../../../consts";
import {
  getAllSpeakers,
  getSpeakerSlug,
  formatTime,
  getLanguageLabel,
  getLevelLabel,
  markdownToHtml,
  i18n,
  type SpeakerWithSessions,
} from "../../../utils/schedule";

const locale = "fr";
const t = i18n[locale];

export function getStaticPaths() {
  const speakers = getAllSpeakers();
  return speakers.map((speaker) => ({
    params: { slug: getSpeakerSlug(speaker) },
    props: { speaker },
  }));
}

type Props = {
  speaker: SpeakerWithSessions;
};

const { speaker } = Astro.props;

function getSocialIcon(link: string): { name: string; icon: string } {
  if (link.includes("github")) {
    return {
      name: "GitHub",
      icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>`,
    };
  }
  if (link.includes("linkedin")) {
    return {
      name: "LinkedIn",
      icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>`,
    };
  }
  if (link.includes("x.com") || link.includes("twitter")) {
    return {
      name: "X/Twitter",
      icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`,
    };
  }
  return {
    name: "Lien",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>`,
  };
}

const schema = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: speaker.name,
  jobTitle: speaker.company,
  description: speaker.bio,
  url: `${SITE_DOMAIN}/${locale}/speaker/${getSpeakerSlug(speaker)}`,
  image: speaker.picture,
  sameAs: speaker.socialLinks,
};
---

<Layout title={`${speaker.name} - ${SITE_TITLE}`} schema={schema}>
  <main>
    <!-- Hero Section with Speaker Profile -->
    <div class="relative bg-gradient-to-br from-primary/20 via-base-200 to-secondary/20 pt-8 pb-16">
      <div class="absolute inset-0 bg-[url('/cfp-conference.jpg')] bg-cover bg-center opacity-10"></div>
      <div class="relative max-w-screen-lg mx-auto px-4 md:px-8">
        <!-- Back Button -->
        <a
          href={`/${locale}/schedule`}
          class="inline-flex items-center gap-2 text-base-content/70 hover:text-primary transition-colors mb-8"
        >
          {t.backToSchedule}
        </a>

        <!-- Speaker Card -->
        <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
          <!-- Avatar -->
          <div class="relative">
            <div class="w-40 h-40 md:w-48 md:h-48 rounded-2xl overflow-hidden ring-4 ring-primary/30 shadow-2xl">
              <img
                src={speaker.picture}
                alt={speaker.name}
                class="w-full h-full object-cover"
              />
            </div>
            <!-- Decorative element -->
            <div class="absolute -bottom-2 -right-2 w-12 h-12 bg-primary rounded-lg -z-10"></div>
          </div>

          <!-- Info -->
          <div class="text-center md:text-left flex-1">
            <h1 class="text-4xl md:text-5xl font-bold mb-3 title-font">
              {speaker.name}
            </h1>
            {speaker.company && (
              <p class="text-xl text-base-content/70 mb-6 flex items-center justify-center md:justify-start gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M6 22V4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v18Z"/>
                  <path d="M6 12H4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h2"/>
                  <path d="M18 9h2a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2h-2"/>
                  <path d="M10 6h4"/>
                  <path d="M10 10h4"/>
                  <path d="M10 14h4"/>
                  <path d="M10 18h4"/>
                </svg>
                {speaker.company}
              </p>
            )}

            <!-- Social Links -->
            {speaker.socialLinks.length > 0 && (
              <div class="flex gap-3 justify-center md:justify-start">
                {speaker.socialLinks.map((link) => {
                  const social = getSocialIcon(link);
                  return (
                    <a
                      href={link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="btn btn-circle btn-outline btn-primary hover:scale-110 transition-transform"
                      title={social.name}
                    >
                      <Fragment set:html={social.icon} />
                    </a>
                  );
                })}
              </div>
            )}
          </div>
        </div>
      </div>
    </div>

    <section class="max-w-screen-lg mx-auto px-4 md:px-8 py-12">
      <!-- Biography Section -->
      <div class="card bg-base-200 shadow-xl mb-12">
        <div class="card-body">
          <h2 class="card-title text-2xl mb-4 flex items-center gap-3">
            <span class="w-10 h-10 rounded-lg bg-primary/20 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
                <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/>
                <circle cx="12" cy="7" r="4"/>
              </svg>
            </span>
            {t.biography}
          </h2>
          <div class="prose prose-lg max-w-none text-base-content/80" set:html={markdownToHtml(speaker.bio)} />
        </div>
      </div>

      <!-- Talks Section -->
      <div>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-3">
          <span class="w-10 h-10 rounded-lg bg-secondary/20 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary">
              <path d="m16 13 5.223 3.482a.5.5 0 0 0 .777-.416V7.87a.5.5 0 0 0-.752-.432L16 10.5"/>
              <rect x="2" y="6" width="14" height="12" rx="2"/>
            </svg>
          </span>
          {speaker.sessions.length > 1 ? t.talks : t.talk}
        </h2>

        <div class="space-y-6">
          {speaker.sessions.map((session) => (
            <div class="card bg-base-200 shadow-xl overflow-hidden">
              <!-- Time Banner -->
              <div class="bg-primary text-primary-content px-6 py-3 flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12 6 12 12 16 14"/>
                  </svg>
                  <span class="font-mono font-bold text-lg">
                    {formatTime(session.start, locale)} - {formatTime(session.end, locale)}
                  </span>
                </div>
              </div>

              <div class="card-body">
                <h3 class="card-title text-xl md:text-2xl mb-4">
                  {session.title}
                </h3>

                {session.proposal && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {session.language && (
                      <span class="badge badge-lg gap-2">
                        {session.language === "fr" ? "ðŸ‡«ðŸ‡·" : "ðŸ‡¬ðŸ‡§"}
                        {getLanguageLabel(session.language, locale).split(" ")[1]}
                      </span>
                    )}
                    <span class="badge badge-lg badge-secondary badge-outline">
                      {getLevelLabel(session.proposal.level, locale)}
                    </span>
                  </div>
                )}

                {session.proposal && (
                  <div class="bg-base-100 rounded-xl p-6 mt-2">
                    <h4 class="font-semibold mb-3 text-base-content/70 uppercase text-sm tracking-wide">
                      {t.viewAbstract}
                    </h4>
                    <div class="text-base-content/80 leading-relaxed prose prose-sm max-w-none" set:html={markdownToHtml(session.proposal.abstract)} />
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .title-font {
    font-family: "Bangers", sans-serif;
  }
</style>
<style is:global>
  .prose p {
    margin-bottom: 1em;
  }
  .prose blockquote {
    border-left: 4px solid hsl(var(--p));
    padding-left: 1em;
    margin: 1em 0;
    font-style: italic;
  }
</style>
