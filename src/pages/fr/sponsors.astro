---
import Layout from "../../layouts/Layout.astro";
import type { ISponsor } from "../../models/sponsor.model";
import SponsorList from "../../components/Sponsors.astro";
import Partners from "../../components/Partners.astro";
import { isResearchingSponsors } from "../../utils";
import { SPONSORSHIP_BROCHURE_URL, SPONSORS, PARTENERS } from "../../consts";

const sponsors: Array<ISponsor> = [];

const schema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  name: "Sponsors de la conférence",
  description:
    "Liste des sponsors soutenant la conférence de développement web.",
  itemListElement: sponsors.map((sponsor) => ({
    "@type": "Organization",
    name: sponsor.name,
    url: sponsor.url,
    logo: sponsor.logo,
    description: sponsor.description,
    sameAs: [sponsor.twitter, sponsor.linkedin],
  })),
};
---

<Layout title="Sponsors" schema={schema}>
  <main>
    <section class="max-w-screen-xl m-auto px-8 py-12">
        {SPONSORS.length > 0 && (
            <div class="mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center">Nos Sponsors</h2>
                <SponsorList />
            </div>
        )}

        {PARTENERS.length > 0 && (
            <div class="mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center">Nos Partenaires</h2>
                <Partners />
            </div>
        )}

        {
            isResearchingSponsors() && (
                <div class="space-y-16">
                    <!-- Hero CTA Section -->
                    <div class="text-center space-y-6 py-12">
                        <h2 class="text-4xl md:text-5xl font-bold">Rejoignez-nous en tant que sponsor</h2>
                        <p class="text-xl text-base-content/80 max-w-3xl m-auto">
                            Connectez-vous à la communauté Angular française et présentez votre marque 
                            à un public passionné de développeurs web
                        </p>
                        <div class="pt-4">
                            <a href={SPONSORSHIP_BROCHURE_URL.fr} class="btn btn-primary btn-lg" download>
                                Télécharger le dossier de sponsoring
                            </a>
                        </div>
                        </div>

                    <!-- Previous Editions Gallery -->
                    <div class="space-y-6">
                        <h2 class="text-3xl md:text-4xl font-bold text-center">Éditions précédentes</h2>
                        <p class="text-center text-base-content/70 max-w-2xl mx-auto">
                            Découvrez l'énergie et l'engagement de nos précédentes conférences
                        </p>
                        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-8">
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="/cfp-conference.jpg" 
                                    alt="Public 2025"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="/2025-edition/benevoles.jpg" 
                                    alt="Volunteers"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="/2025-edition/room.jpg" 
                                    alt="Conference room"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="/2025-edition/cedric.jpg" 
                                    alt="Cédric Exbrayat"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="/2025-edition/christopher.jpg" 
                                    alt="Christopher Holder"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="/2025-edition/manfred.jpg" 
                                    alt="Manfred Steyer"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="/2025-edition/emmanuelle.jpg" 
                                    alt="Emmanuelle Aboaf"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="/2025-edition/rainer.jpg" 
                                    alt="Rainer Hahnekamp"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="/2025-edition/matthieu.jpg" 
                                    alt="Matthieu Riegler"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="/2025-edition/soumaya.jpg" 
                                    alt="Soumaya Erradi"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="/2025-edition/arthur.jpg" 
                                    alt="Arthur Lannelucq"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="/2025-edition/laura.jpg" 
                                    alt="Laura Pedenaud"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                        </div>
                    </div>

                    <!-- Benefits Grid -->
                    <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-6">
                        <div class="card bg-base-200 border border-base-300/50 p-6">
                            <div class="card-body p-0">
                                <h3 class="text-xl font-bold mb-3">Visibilité & Notoriété</h3>
                                <p class="text-base-content/70">
                                    Associez votre marque à l'innovation et à l'expertise. Affirmez votre position d'acteur majeur de l'écosystème technologique francophone.
                                </p>
                            </div>
                        </div>
                        <div class="card bg-base-200 border border-base-300/50 p-6">
                            <div class="card-body p-0">
                                <h3 class="text-xl font-bold mb-3">Recrutement & Marque Employeur</h3>
                                <p class="text-base-content/70">
                                    Accédez à un vivier de talents passionnés. Présentez votre culture d'entreprise et recrutez les experts Angular de demain.
                                </p>
                            </div>
                        </div>
                        <div class="card bg-base-200 border border-base-300/50 p-6">
                            <div class="card-body p-0">
                                <h3 class="text-xl font-bold mb-3">Networking & Business</h3>
                                <p class="text-base-content/70">
                                   Échangez avec des leaders d'opinion, des experts techniques et des décideurs. Nouez des partenariats stratégiques et développez votre réseau.
                                </p>
                            </div>
                        </div>
                        <div class="card bg-base-200 border border-base-300/50 p-6">
                            <div class="card-body p-0">
                                <h3 class="text-xl font-bold mb-3">Engagement Communautaire</h3>
                                <p class="text-base-content/70">
                                    Montrez votre engagement envers la communauté tech francophone. Renforcez votre image RSE en soutenant un événement inclusif, accessible et axé sur le partage de connaissances.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Why Sponsor Section -->
                    <div class="space-y-8">
                        <h2 class="text-3xl md:text-4xl font-bold text-center">Pourquoi sponsoriser NG Baguette Conf ?</h2>
                        <div class="grid md:grid-cols-2 gap-8 items-center">
                            <div class="space-y-4">
                                <h3 class="text-2xl font-bold">Une communauté en croissance</h3>
                                <p class="text-base-content/80 text-lg">
                                    NG Baguette Conf rassemble la communauté Angular française pour une journée d'apprentissage, 
                                    de networking et d'innovation. En tant que sponsor, vous ferez partie d'un événement 
                                    qui célèbre le meilleur du développement Angular.
                                </p>
                                <h3 class="text-2xl font-bold mt-8">Plusieurs niveaux de sponsoring</h3>
                                <p class="text-base-content/80 text-lg">
                                    Nous proposons deux packs de sponsoring conçus pour s'adapter à différents budgets et objectifs marketing. Nous proposons aussi des sponsorings "à la carte", qui peuvent être pris seuls ou en complément d'un pack de sponsoring.
                                </p>
                            </div>
                            <div class="bg-base-200 rounded-lg p-8 border border-base-300/50">
                                <h3 class="text-xl font-bold mb-6">Ce qui est inclus</h3>
                                <ul class="space-y-3">
                                    <li class="flex items-start gap-3">
                                        <span class="text-primary mt-1">✓</span>
                                        <span class="text-base-content/80">Placement du logo sur le site web et les replays</span>
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <span class="text-primary mt-1">✓</span>
                                        <span class="text-base-content/80">Mentions et promotion sur LinkedIn</span>
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <span class="text-primary mt-1">✓</span>
                                        <span class="text-base-content/80">Opportunités de networking avec les speakers et participants</span>
                                    </li>
                                     <li class="flex items-start gap-3">
                                        <span class="text-primary mt-1">✓</span>
                                        <span class="text-base-content/80">Espace stand à l'événement (premium)</span>
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <span class="text-primary mt-1">✓</span>
                                        <span class="text-base-content/80">2 billets pour votre équipe (premium)</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Final CTA -->
                    <div class="bg-base-200 rounded-lg p-8 md:p-12 border border-base-300/50 text-center">
                        <h2 class="text-3xl md:text-4xl font-bold mb-4">Prêt à commencer ?</h2>
                        <p class="text-lg text-base-content/80 mb-8 max-w-2xl m-auto">
                            Téléchargez notre dossier de sponsoring détaillé pour en savoir plus sur les packs disponibles, 
                            les tarifs et comment nous pouvons personnaliser un sponsoring adapté à votre marque.
                        </p>
                        <a href={SPONSORSHIP_BROCHURE_URL.fr} class="btn btn-primary btn-lg" download>
                            Télécharger le dossier de sponsoring
                        </a>
                        <p class="text-sm text-base-content/60 mt-4">
                            Des questions ? Contactez-nous à <a href="mailto:contact@angular-nexus.org" class="link link-primary">contact@angular-nexus.org</a>
                        </p>
                    </div>
                </div>
            )
        }
    </section>
  </main>
</Layout>