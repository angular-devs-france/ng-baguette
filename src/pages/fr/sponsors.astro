---
import Layout from "../../layouts/Layout.astro";
import type { ISponsor } from "../../models/sponsor.model";
import SponsorList from "../../components/Sponsors.astro";
import Partners from "../../components/Partners.astro";
import { isResearchingSponsors } from "../../utils";
import { SPONSORSHIP_BROCHURE_URL, SPONSORS, PARTENERS } from "../../consts";

const sponsors: Array<ISponsor> = [];

const schema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  name: "Sponsors de la conférence",
  description:
    "Liste des sponsors soutenant la conférence de développement web.",
  itemListElement: sponsors.map((sponsor) => ({
    "@type": "Organization",
    name: sponsor.name,
    url: sponsor.url,
    logo: sponsor.logo,
    description: sponsor.description,
    sameAs: [sponsor.twitter, sponsor.linkedin],
  })),
};
---

<Layout title="Sponsors" schema={schema}>
  <main>
    <section class="max-w-screen-xl m-auto px-8 py-12">
        {SPONSORS.length > 0 && (
            <div class="mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center">Nos Sponsors</h2>
                <SponsorList />
            </div>
        )}

        {PARTENERS.length > 0 && (
            <div class="mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center">Nos Partenaires</h2>
                <Partners />
            </div>
        )}

        {
            isResearchingSponsors() && (
                <div class="space-y-16">
                    <!-- Hero CTA Section -->
                    <div class="text-center space-y-6 py-12">
                        <h2 class="text-4xl md:text-5xl font-bold">Rejoignez-nous en tant que sponsor</h2>
                        <p class="text-xl text-base-content/80 max-w-3xl m-auto">
                            Connectez-vous à la communauté Angular française et présentez votre marque 
                            à un public passionné de développeurs web
                        </p>
                        <div class="pt-4">
                            <a href={SPONSORSHIP_BROCHURE_URL.fr} class="btn btn-primary btn-lg" download>
                                Télécharger le dossier de sponsoring
                            </a>
                        </div>
                        </div>

                    <!-- Previous Editions Gallery -->
                    <div class="space-y-6">
                        <h2 class="text-3xl md:text-4xl font-bold text-center">Éditions précédentes</h2>
                        <p class="text-center text-base-content/70 max-w-2xl mx-auto">
                            Découvrez l'énergie et l'engagement de nos précédentes conférences
                        </p>
                        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-8">
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="https://images.unsplash.com/photo-1540575467063-178a50c2df87?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
                                    alt="Orateur présentant à la conférence"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="https://images.unsplash.com/photo-1505373877841-8d25f7d46678?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
                                    alt="Participants en réseau"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="https://images.unsplash.com/photo-1511578314322-379afb476865?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
                                    alt="Audience de la conférence"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="https://images.unsplash.com/photo-1475721027785-f74eccf877e2?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
                                    alt="Scène de conférence"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="https://images.unsplash.com/photo-1492684223066-81342ee5ff30?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
                                    alt="Lieu de la conférence"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="https://images.unsplash.com/photo-1524178232363-1fb2b075b655?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
                                    alt="Personnes collaborant"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="https://images.unsplash.com/photo-1556761175-5973dc0f32e7?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
                                    alt="Présentation de conférence"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                <img 
                                    src="https://images.unsplash.com/photo-1552664730-d307ca884978?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
                                    alt="Session de networking"
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                        </div>
                    </div>

                    <!-- Benefits Grid -->
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <div class="card bg-base-200 border border-base-300/50 p-6">
                            <div class="card-body p-0">
                                <h3 class="text-xl font-bold mb-3">Public ciblé</h3>
                                <p class="text-base-content/70">
                                    Atteignez des développeurs Angular passionnés et des décideurs de la communauté tech française
                                </p>
                            </div>
                        </div>
                        <div class="card bg-base-200 border border-base-300/50 p-6">
                            <div class="card-body p-0">
                                <h3 class="text-xl font-bold mb-3">Visibilité de marque</h3>
                                <p class="text-base-content/70">
                                    Augmentez la notoriété de votre marque grâce à de multiples points de contact avant, pendant et après l'événement
                                </p>
                            </div>
                        </div>
                        <div class="card bg-base-200 border border-base-300/50 p-6">
                            <div class="card-body p-0">
                                <h3 class="text-xl font-bold mb-3">Engagement communautaire</h3>
                                <p class="text-base-content/70">
                                    Construisez des relations significatives avec les développeurs, les talents potentiels et les leaders de l'industrie
                                </p>
                            </div>
                        </div>
                        <div class="card bg-base-200 border border-base-300/50 p-6">
                            <div class="card-body p-0">
                                <h3 class="text-xl font-bold mb-3">Opportunités de recrutement</h3>
                                <p class="text-base-content/70">
                                    Connectez-vous avec les meilleurs talents de l'écosystème Angular et présentez la culture de votre entreprise
                                </p>
                            </div>
                        </div>
                        <div class="card bg-base-200 border border-base-300/50 p-6">
                            <div class="card-body p-0">
                                <h3 class="text-xl font-bold mb-3">Leadership d'opinion</h3>
                                <p class="text-base-content/70">
                                    Positionnez votre marque comme un leader dans l'espace Angular et du développement web
                                </p>
                            </div>
                        </div>
                        <div class="card bg-base-200 border border-base-300/50 p-6">
                            <div class="card-body p-0">
                                <h3 class="text-xl font-bold mb-3">ROI & Analytics</h3>
                                <p class="text-base-content/70">
                                    Suivez l'impact de votre sponsoring avec des analyses détaillées et des métriques d'engagement
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Why Sponsor Section -->
                    <div class="space-y-8">
                        <h2 class="text-3xl md:text-4xl font-bold text-center">Pourquoi sponsoriser NG Baguette ?</h2>
                        <div class="grid md:grid-cols-2 gap-8 items-center">
                            <div class="space-y-4">
                                <h3 class="text-2xl font-bold">Une communauté en croissance</h3>
                                <p class="text-base-content/80 text-lg">
                                    NG Baguette rassemble la communauté Angular française pour une journée d'apprentissage, 
                                    de networking et d'innovation. En tant que sponsor, vous ferez partie d'un événement 
                                    qui célèbre le meilleur du développement Angular.
                                </p>
                                <h3 class="text-2xl font-bold mt-8">Plusieurs niveaux de sponsoring</h3>
                                <p class="text-base-content/80 text-lg">
                                    Nous proposons des packages de sponsoring flexibles conçus pour s'adapter à différents 
                                    budgets et objectifs marketing. Des packages de visibilité aux partenariats premium, 
                                    trouvez la formule qui convient à votre marque.
                                </p>
                            </div>
                            <div class="bg-base-200 rounded-lg p-8 border border-base-300/50">
                                <h3 class="text-xl font-bold mb-6">Ce qui est inclus</h3>
                                <ul class="space-y-3">
                                    <li class="flex items-start gap-3">
                                        <span class="text-primary mt-1">✓</span>
                                        <span class="text-base-content/80">Placement du logo sur le site web et les supports</span>
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <span class="text-primary mt-1">✓</span>
                                        <span class="text-base-content/80">Mentions et promotion sur les réseaux sociaux</span>
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <span class="text-primary mt-1">✓</span>
                                        <span class="text-base-content/80">Espace stand à l'événement</span>
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <span class="text-primary mt-1">✓</span>
                                        <span class="text-base-content/80">Billets gratuits pour votre équipe</span>
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <span class="text-primary mt-1">✓</span>
                                        <span class="text-base-content/80">Opportunités de networking avec les speakers et participants</span>
                                    </li>
                                    <li class="flex items-start gap-3">
                                        <span class="text-primary mt-1">✓</span>
                                        <span class="text-base-content/80">Accès à la liste des participants (avec consentement)</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Final CTA -->
                    <div class="bg-base-200 rounded-lg p-8 md:p-12 border border-base-300/50 text-center">
                        <h2 class="text-3xl md:text-4xl font-bold mb-4">Prêt à commencer ?</h2>
                        <p class="text-lg text-base-content/80 mb-8 max-w-2xl m-auto">
                            Téléchargez notre dossier de sponsoring détaillé pour en savoir plus sur les packages disponibles, 
                            les tarifs et comment nous pouvons personnaliser un sponsoring adapté à votre marque.
                        </p>
                        <a href={SPONSORSHIP_BROCHURE_URL.fr} class="btn btn-primary btn-lg" download>
                            Télécharger le dossier de sponsoring
                        </a>
                        <p class="text-sm text-base-content/60 mt-4">
                            Des questions ? Contactez-nous à <a href="mailto:contact@angulardevs.fr" class="link link-primary">contact@angulardevs.fr</a>
                        </p>
                    </div>
                </div>
            )
        }
    </section>
  </main>
</Layout>
