---
import Partners from "../../components/Partners.astro";
import Sponsors from "../../components/Sponsors.astro";
import Layout from "../../layouts/Layout.astro";

import {
  ADDRESS,
  BLIND_TICKET_PRICE,
  BLIND_TICKET_SOLD_OUT,
  EVENT_DATE,
  HELLOASSO_LINK,
  OPEN_BLIND_TICKET_SALE_DATE,
  OPEN_TICKET_SALE_DATE,
  PARTENERS,
  SPONSORS,
  TICKET_PRICE,
  TICKET_SOLD_OUT,
} from "../../consts";
import { displayDate } from "../../utils";
---

<Layout title={EVENT_DATE}>
  <main>
    <div class="hero min-h-screen">
      <div class="hero-content text-center">
        <div class="max-w-ld flex gap-20 flex-col lg:flex-row">
          <div class="flex flex-col flex-1 items-center">
            <img
              class="w-full md:px-20"
              src="/ng-baguette-logo.svg"
              alt="EventEdge"
            />
            <h2 class="text-2xl md:text-3xl text-primary font-bold mt-4">
              La conférence Angular à la française
            </h2>
            <p class="py-6 px-4 md:px-0">
              Rejoignez-nous pour une expérience unique de conférence Angular en
              France ! Découvrez les dernières nouveautés en développement
              Angular, réseautez avec des experts et d'autres développeurs.
            </p>

            <p class="mt-4 text-2xl text-primary font-bold">
              {displayDate(EVENT_DATE)} - 9h30
            </p>
            <p class="mt-2 font-bold">
              {ADDRESS.addressLocality}, {ADDRESS.addressCountry}
            </p>
          </div>
          <div class="flex-1 mt-8 mb-8 md:mb-0">
            <h2 class="text-2xl md:text-3xl font-bold mb-8">Billets</h2>
            <ul class="flex flex-col md:flex-row gap-4 items-stretch">
              <li
                class="flex-1 card bg-base-200 shadow-xl border-2 border-primary"
              >
                <div class="card-body flex flex-col items-center">
                  <h3 class="card-title text-2xl text-center">Billet blind</h3>
                  <p>Quantité limitée</p>

                  <span class="text-3xl font-bold">{BLIND_TICKET_PRICE} €</span>
                  {
                    new Date() >= new Date(OPEN_BLIND_TICKET_SALE_DATE) ? (
                      BLIND_TICKET_SOLD_OUT ? (
                        <p class="text-primary">Complet</p>
                      ) : (
                        <a
                          class="btn btn-primary"
                          target="_blank"
                          href={HELLOASSO_LINK}
                        >
                          Obtenir votre billet
                        </a>
                      )
                    ) : (
                      <p class="text-primary">
                        Not yet on sale from
                        {displayDate(OPEN_BLIND_TICKET_SALE_DATE)})
                      </p>
                    )
                  }
                </div>
              </li>
              <li
                class="flex-1 card bg-base-200 shadow-xl border-2 border-primary"
              >
                <div class="card-body flex flex-col items-center">
                  <h3 class="card-title text-xl text-center">
                    Billet Standard
                  </h3>
                  <p>Billet conférence classique</p>
                  <span class="text-3xl font-bold">{TICKET_PRICE} €</span>
                  {
                    new Date() >= new Date(OPEN_TICKET_SALE_DATE) ? (
                      TICKET_SOLD_OUT ? (
                        <p class="text-primary">Complet</p>
                      ) : (
                        <a
                          class="btn btn-primary"
                          target="_blank"
                          href={HELLOASSO_LINK}
                        >
                          Obtenir votre billet
                        </a>
                      )
                    ) : (
                      <p class="text-primary">
                        Not yet on sale from
                        {displayDate(OPEN_TICKET_SALE_DATE)})
                      </p>
                    )
                  }
                </div>
              </li>
            </ul>

            {SPONSORS.length > 0 && (
              <>
                <h2 class="text-2xl md:text-3xl font-bold my-8">Sponsors</h2>
                <Sponsors />
              </>
            )}

            {PARTENERS.length > 0 && (
              <h2 class="text-2xl md:text-3xl font-bold my-8">Partenaires</h2>
              <Partners />)
            }

            <!-- <div role="alert" class="alert mt-8">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                class="stroke-primary h-6 w-6 shrink-0 hidden md:block"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              <span>L'appel à conférenciers est ouvert jusqu'au 14 mars</span>
              <div>
                <a
                  class="btn btn-sm btn-primary"
                  href="https://conference-hall.io/ng-baguette-conf-2025"
                  target="_blank">Soumettez vos propositions de talk</a
                >
              </div>
            </div> -->
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .title-font {
    font-family: "Lilita", sans-serif;
  }
</style>
