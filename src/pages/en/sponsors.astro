---
import Layout from "../../layouts/Layout.astro";
import {type ISponsor} from "../../models/sponsor.model";
import SponsorList from "../../components/Sponsors.astro";
import Partners from "../../components/Partners.astro";
import { isResearchingSponsors } from "../../utils";
import { SPONSORSHIP_BROCHURE_URL, SPONSORS, PARTENERS } from "../../consts";

const sponsors: Array<ISponsor> = [];

const schema = {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "Conference Sponsors",
    "description": "A list of sponsors supporting the web development conference.",
    "itemListElement": sponsors.map(sponsor => ({
        "@type": "Organization",
        "name": sponsor.name,
        "url": sponsor.url,
        "logo": sponsor.logo,
        "description": sponsor.description,
        "sameAs": [
            sponsor.twitter,
            sponsor.linkedin
        ]
    }))
}

---


<Layout title="Sponsors" schema={schema}>
    <main>
        <section class="max-w-screen-xl m-auto px-8 py-12">
            {SPONSORS.length > 0 && (
                <div class="mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center">Our Sponsors</h2>
                    <SponsorList />
                </div>
            )}

            {PARTENERS.length > 0 && (
                <div class="mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center">Our Partners</h2>
                    <Partners />
                </div>
            )}

            {
                isResearchingSponsors() && (
                    <div class="space-y-16">
                        <!-- Hero CTA Section -->
                        <div class="text-center space-y-6 py-12">
                            <h2 class="text-4xl md:text-5xl font-bold">Join Us as a Sponsor</h2>
                            <p class="text-xl text-base-content/80 max-w-3xl m-auto">
                                Connect with the French Angular community and showcase your brand to passionate web developers
                            </p>
                            <div class="pt-4">
                                <a href={SPONSORSHIP_BROCHURE_URL.en} class="btn btn-primary btn-lg" download>
                                    Download Sponsorship Prospectus
                                </a>
                            </div>
                        </div>

                        <!-- Previous Editions Gallery -->
                        <div class="space-y-6">
                            <h2 class="text-3xl md:text-4xl font-bold text-center">Previous Editions</h2>
                            <p class="text-center text-base-content/70 max-w-2xl mx-auto">
                                See the energy and engagement from our previous conferences
                            </p>
                            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-8">
                                <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                    <img
                                        src="/cfp-conference.jpg" 
                                        alt="Public 2025"
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                    <img 
                                        src="/2025-edition/benevoles.jpg" 
                                        alt="Volunteers"
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                    <img 
                                        src="/2025-edition/room.jpg" 
                                        alt="Conference room"
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                    <img 
                                        src="/2025-edition/cedric.jpg" 
                                        alt="Cédric Exbrayat"
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                    <img 
                                        src="/2025-edition/christopher.jpg" 
                                        alt="Christopher Holder"
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                    <img 
                                        src="/2025-edition/manfred.jpg" 
                                        alt="Manfred Steyer"
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                    <img 
                                        src="/2025-edition/emmanuelle.jpg" 
                                        alt="Emmanuelle Aboaf"
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                    <img 
                                        src="/2025-edition/rainer.jpg" 
                                        alt="Rainer Hahnekamp"
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                    <img 
                                        src="/2025-edition/matthieu.jpg" 
                                        alt="Matthieu Riegler"
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                    <img 
                                        src="/2025-edition/soumaya.jpg" 
                                        alt="Soumaya Erradi"
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                    <img 
                                        src="/2025-edition/arthur.jpg" 
                                        alt="Arthur Lannelucq"
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="aspect-square overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow">
                                    <img 
                                        src="/2025-edition/laura.jpg" 
                                        alt="Laura Pedenaud"
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                            </div>
                        </div>

                        <!-- Benefits Grid -->
                        <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-6">
                            <div class="card bg-base-200 border border-base-300/50 p-6">
                                <div class="card-body p-0">
                                    <h3 class="text-xl font-bold mb-3">Visibility & Brand Awareness</h3>
                                    <p class="text-base-content/70">
                                        Associate your brand with innovation and expertise. Assert your position as a key player in the French-speaking technology ecosystem.
                                    </p>
                                </div>
                            </div>
                            <div class="card bg-base-200 border border-base-300/50 p-6">
                                <div class="card-body p-0">
                                    <h3 class="text-xl font-bold mb-3">Recruitment & Employer Branding</h3>
                                    <p class="text-base-content/70">
                                        Gain access to a pool of passionate talent. Showcase your company culture and recruit the Angular experts of tomorrow.
                                    </p>
                                </div>
                            </div>
                            <div class="card bg-base-200 border border-base-300/50 p-6">
                                <div class="card-body p-0">
                                    <h3 class="text-xl font-bold mb-3">Networking & Business</h3>
                                    <p class="text-base-content/70">
                                        Connect with thought leaders, technical experts, and decision-makers. Build strategic partnerships and grow your network.
                                    </p>
                                </div>
                            </div>
                            <div class="card bg-base-200 border border-base-300/50 p-6">
                                <div class="card-body p-0">
                                    <h3 class="text-xl font-bold mb-3">Community Engagement</h3>
                                    <p class="text-base-content/70">
                                        Demonstrate your commitment to the French-speaking tech community. Strengthen your CSR image by supporting an inclusive, accessible event focused on knowledge sharing.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Why Sponsor Section -->
                        <div class="space-y-8">
                            <h2 class="text-3xl md:text-4xl font-bold text-center">Why Sponsor NG Baguette Conf?</h2>
                            <div class="grid md:grid-cols-2 gap-8 items-center">
                                <div class="space-y-4">
                                    <h3 class="text-2xl font-bold">A Growing Community</h3>
                                    <p class="text-base-content/80 text-lg">
                                        NG Baguette Conf brings together the French Angular community for a day of learning, networking, and innovation. 
                                        As a sponsor, you'll be part of an event that celebrates the best of Angular development.
                                    </p>
                                    <h3 class="text-2xl font-bold mt-8">Multiple Sponsorship Levels</h3>
                                    <p class="text-base-content/80 text-lg">
                                        We offer two sponsorship packages designed to suit different budgets and marketing objectives. 
                                        We also provide “à la carte” sponsorship options, which can be taken on their own or in addition to a sponsorship package.
                                    </p>
                                </div>
                                <div class="bg-base-200 rounded-lg p-8 border border-base-300/50">
                                    <h3 class="text-xl font-bold mb-6">What's Included</h3>
                                    <ul class="space-y-3">
                                        <li class="flex items-start gap-3">
                                            <span class="text-primary mt-1">✓</span>
                                            <span class="text-base-content/80">Logo placement on website and replays</span>
                                        </li>
                                        <li class="flex items-start gap-3">
                                            <span class="text-primary mt-1">✓</span>
                                            <span class="text-base-content/80">Social media mentions and promotion</span>
                                        </li>
                                        <li class="flex items-start gap-3">
                                            <span class="text-primary mt-1">✓</span>
                                            <span class="text-base-content/80">Networking opportunities with speakers and attendees</span>
                                        </li>
                                         <li class="flex items-start gap-3">
                                            <span class="text-primary mt-1">✓</span>
                                            <span class="text-base-content/80">Booth space at the event (premium)</span>
                                        </li>
                                        <li class="flex items-start gap-3">
                                            <span class="text-primary mt-1">✓</span>
                                            <span class="text-base-content/80">Complimentary tickets for your team (premium)</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Final CTA -->
                        <div class="bg-base-200 rounded-lg p-8 md:p-12 border border-base-300/50 text-center">
                            <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Get Started?</h2>
                            <p class="text-lg text-base-content/80 mb-8 max-w-2xl m-auto">
                                Download our detailed sponsorship prospectus to learn more about available packages, 
                                pricing, and how we can customize a sponsorship that works for your brand.
                            </p>
                            <a href={SPONSORSHIP_BROCHURE_URL.en} class="btn btn-primary btn-lg" download>
                                Download Sponsorship Prospectus
                            </a>
                            <p class="text-sm text-base-content/60 mt-4">
                                Questions? Contact us at <a href="mailto:contact@angular-nexus.org" class="link link-primary">contact@angular-nexus.org</a>
                            </p>
                        </div>
                    </div>
                )
            }
        </section>
    </main>
</Layout>