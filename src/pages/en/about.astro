---
import Layout from "../../layouts/Layout.astro";
import Crew from '../../components/Crew.astro';
import { ADDRESS, SITE_DOMAIN, SITE_TITLE, SOCIAL_LINKS } from "../../consts";

const crew = [
    {
        name: 'Gerome Grignon',
        title: 'Frontend Software Engineer at Lucca',
        heroImage: '/crew/gerome-grignon.png',
        linkedin: 'https://www.linkedin.com/in/gerome-grignon/',
        twitter: 'https://x.com/GeromeDEV',
        bluesky: 'https://bsky.app/profile/gerome.dev'
    },
    {
        name: 'Anthony Pena',
        title: 'Développeur Web / Staff Engineer at SFΞIR Nantes',
        heroImage: '/crew/anthony-pena.webp',
        linkedin: 'https://www.linkedin.com/in/penaanthony/',
        twitter: 'https://x.com/_Anthony_Pena',
        bluesky: 'https://bsky.app/profile/anthonypena.bsky.social'
    },
    {
        name: 'Yann-Thomas Le Moigne',
        title: 'Technical Lead at CGI',
        heroImage: '/crew/yann-thomas-le-moigne.jpeg',
        linkedin: 'https://www.linkedin.com/in/yatho/'
    },
    {
        name: 'Camille Pillot',
        title: 'Développeuse full-stack @Takima',
        heroImage: '/crew/camille-pillot.jpg',
        linkedin: 'https://www.linkedin.com/in/camille-pillot-455517177/',
        twitter: 'https://x.com/CamiPillotDev'
    }
]

const schema = {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "About Us",
    "description": "Information about the team and the web development conference.",
    "mainEntity": {
        "@type": "Organization",
        "name": "Angular Web Development Conference",
        "description": "The premier event for web developers, bringing together industry experts...",
    "url": `${SITE_DOMAIN}/about`,
        "foundingDate": "2020-01-01",
        "founders": 
    crew.map(c => {
        return {
                "@type": "Person",
          name: c.name,
          jobTitle: c.title
        }
      })
        ,
        "location": {
            "@type": "Place",
      "name": SITE_TITLE,
            "address": {
        "@type": "PostalAddress",
        ...ADDRESS
            }
        },
    "sameAs": [
      SOCIAL_LINKS.bluesky,
      SOCIAL_LINKS.linkedin,
      SOCIAL_LINKS.twitter
        ]
    }
}

---


<Layout title="About" schema={schema}>
    <main>
        <!-- Hero Section -->
        <div
            class="hero h-64 md:h-80 mb-12"
            style="background-image: url('/hero/hero-about.jpg'); background-size: cover; background-position: 0% 30%;"
        >
            <div class="hero-overlay bg-opacity-70 bg-base-100"></div>
            <div class="hero-content text-center text-base-content py-12 px-4">
                <div class="max-w-3xl">
                    <h1 class="text-3xl md:text-5xl font-bold mb-4 title-font">About Us</h1>
                    <p class="text-lg md:text-xl text-base-content/90">
                        Meet the team behind NG Baguette Conference
                    </p>
                </div>
            </div>
        </div>

        <section class="max-w-screen-lg m-auto px-8 pb-12">
            <p>The NG Baguette Conference is a community-driven event focused on Angular. Our mission is to bring together developers to share knowledge, network, and grow together. Through engaging talks and networking opportunities, we aim to strengthen the Angular community in France and beyond while celebrating our shared passion for web development.</p>
            <h2 class="text-4xl font-bold my-12">Meet the team</h2>
            {crew.map(crew => <Crew crew={crew} />)}

