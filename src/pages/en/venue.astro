---
import {SITE_TITLE} from "../../consts";
import Layout from "../../layouts/Layout.astro";
import HeaderHero from '../../components/HeaderHero.astro';

const schema = {
    "@context": "https://schema.org",
    "@type": "EventVenue",
    "name": "Conference Venue",
    "description": "Information about the venue hosting the web development conference.",
    "address": {
        "@type": "PostalAddress",
        "streetAddress": "123 Conference Center Drive",
        "addressLocality": "Cityville",
        "addressRegion": "State",
        "postalCode": "12345",
        "addressCountry": "Country"
    },
    "url": "https://example.com/venue",
    "image": "https://example.com/venue-image.jpg",
    "telephone": "+1234567890",
    "geo": {
        "@type": "GeoCoordinates",
        "latitude": "37.7749",
        "longitude": "-122.4194"
    }
}

---


<Layout title="Venue" schema={schema}>
    <main>
        <HeaderHero>
            <span slot="title">Venue</span>
            <span slot="description">Join us in Nantes, France - a vibrant city known for its rich history and tech community. Our conference venue provides an ideal setting for learning and networking in the heart of Western France.</span>
        </HeaderHero>
        <p class="text-center text-2xl font-bold">Details upcoming soon..</p>
    </main>
</Layout>
