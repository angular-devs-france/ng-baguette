---
import Layout from "../layouts/Layout.astro";
import { SITE_DESCRIPTION, EVENT_DATE, EVENT_START_TIME, ADDRESS, BLIND_TICKET_PRICE, BLIND_TICKET_SOLD_OUT, TICKET_PRICE, TICKET_SOLD_OUT, HELLOASSO_LINK, SPONSORS, PARTENERS } from "../consts";
import Sponsors from "../components/Sponsors.astro";
import Partners from "../components/Partners.astro";
---

<Layout title={EVENT_DATE}>
  <main class="container mx-auto px-4">
    <div class="hero min-h-[calc(100vh-100px)]">
      <div class="hero-content text-center">
        <div class="max-w-3xl flex flex-col items-center">
          <img
            class="w-full max-w-sm md:max-w-md"
            src="/ng-baguette-logo.svg"
            alt="NG Baguette Logo"
          />
          <h1 class="text-3xl md:text-4xl font-bold mt-6 title-font">
            {SITE_DESCRIPTION}
          </h1>
          <p class="py-6 text-lg">
            Join us for a unique Angular conference experience in France! Discover the latest in Angular development, network with experts and fellow developers.
          </p>
          <div class="text-2xl font-bold">
            <span>{EVENT_DATE}</span> at <span>{EVENT_START_TIME}</span>
          </div>
          <div class="text-xl font-semibold mt-2">{ADDRESS.addressLocality}, {ADDRESS.addressCountry}</div>
        </div>
      </div>
    </div>

    <section id="tickets" class="my-20">
      <h2 class="text-4xl font-bold text-center mb-12 title-font">Tickets</h2>
      <div class="flex flex-wrap justify-center gap-8">
        <div class="card w-96 bg-base-200 shadow-xl border border-base-300 transform hover:scale-105 transition-transform">
          <div class="card-body items-center text-center">
            <h3 class="card-title text-3xl">Blind Ticket</h3>
            <p>Limited availability</p>
            <div class="text-5xl font-bold my-4">€{BLIND_TICKET_PRICE}</div>
            {BLIND_TICKET_SOLD_OUT ? (
              <div class="badge badge-primary badge-lg">Sold out</div>
            ) : (
              <button class="btn btn-primary btn-lg" onclick="document.getElementById('ticket-modal').showModal()">Get your ticket</button>
            )}
          </div>
        </div>

        <div class="card w-96 bg-base-200 shadow-xl border-2 border-secondary transform hover:scale-105 transition-transform">
          <div class="card-body items-center text-center">
            <h3 class="card-title text-3xl">Regular Ticket</h3>
            <p>Standard conference ticket</p>
            <div class="text-5xl font-bold my-4">€{TICKET_PRICE}</div>
            {TICKET_SOLD_OUT ? (
              <div class="badge badge-secondary badge-lg">Sold out</div>
            ) : (
              <button class="btn btn-secondary btn-lg" onclick="document.getElementById('ticket-modal').showModal()">Get your ticket</button>
            )}
          </div>
        </div>
      </div>
    </section>

    <Sponsors sponsors={SPONSORS} />
    <Partners partners={PARTENERS} />

  </main>

  <dialog id="ticket-modal" class="modal">
    <div class="modal-box">
      <h3 class="font-bold text-lg">Important Note</h3>
      <p class="py-4">To reduce costs and simplify the first edition, we are using a free French platform dedicated to non-profit events.</p>
      <p>The ticket registration page is in French.</p>
      <p>If your French vocabulary is limited to "Oui Oui Baguette", you may want to use Google Translate there to complete your purchase!</p>
      <div class="modal-action">
        <form method="dialog" class="flex gap-4 items-center">
          <a href={HELLOASSO_LINK} target="_blank" class="btn btn-primary">Continue to ticketing</a>
          <button class="btn">Close</button>
        </form>
      </div>
    </div>
  </dialog>

</Layout>

<style>
  .title-font {
    font-family: "Lilita", sans-serif;
  }
</style>
