---
import { getCollection, type CollectionEntry } from "astro:content";
import HeaderHero from "./HeaderHero.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
const { track, title } = Astro.props;

const speakers = (await getCollection("speaker"))
  .filter((speaker) =>
    (track.data.presenterSlug as Array<string>)?.includes(speaker.slug)
  )
  .map((speaker: CollectionEntry<"speaker">) => {
    return {
      ...speaker.data,
      slug: speaker.slug,
    };
  }); 
---

<HeaderHero>
  <span slot="title">{track.data.name}</span>
</HeaderHero>
<section class="max-w-screen-lg m-auto px-8">
  <p>{track.body}</p>
  {
    speakers.length > 0 && (
      <div class="mt-8">
        <h3 class="text-2xl font-bold mb-6">{title}</h3>
        <div class="grid gap-4">
          {speakers.map((speaker) => (
            <a
              href={getRelativeLocaleUrl(
                Astro.currentLocale!,
                "/speaker/" + speaker.slug
              )}
              class="group block p-6 bg-base-200 rounded-lg border border-base-300 hover:border-primary transition-all duration-300 hover:shadow-lg"
            >
              <div class="flex items-center space-x-4">
                <div class="flex-1">
                  <h4 class="text-xl font-semibold group-hover:text-primary transition-colors">
                    {speaker.name}
                  </h4>
                  <p class="mt-2 text-base-content/70 line-clamp-2">
                    {speaker.description}
                  </p>
                </div>
                <svg
                  class="w-6 h-6 text-primary opacity-0 group-hover:opacity-100 transform group-hover:translate-x-2 transition-all"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    )
  }
</section>
