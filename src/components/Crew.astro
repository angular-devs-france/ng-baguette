---
import {type ICrew} from "../models/crew.model";
import {Image} from 'astro:assets';

export interface Props {
    crew: ICrew;
}

const {crew} = Astro.props;
---
<figure class="flex flex-col sm:flex-row items-start gap-8 mb-8">
    <div class="avatar">
        <div class="mask mask-squircle">
            <Image height={200} width={200} format="webp" src={crew.heroImage} alt="" />
        </div>
    </div>
    <figcaption class="flex flex-col">
        <h2 class="text-3xl font-bold">{crew.name}</h2>
        <h3 class="text-2xl opacity-80">{crew.title}</h3>
        <p class="">{crew.bio}</p>
    </figcaption>
</figure>
