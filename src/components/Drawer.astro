---
import Header from './Header.astro';
import {NAVIGATION_LINKS, CFP_LINK} from "../consts";
import Footer from "./Footer.astro";
---

<div class="drawer">
    <input id="my-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col min-h-screen">
        <Header />
        <div class="flex-1">
            <slot />
        </div>
        <Footer />
    </div>
    <div class="drawer-side">
        <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
        <ul class="menu pt-20 w-80 min-h-full bg-base-200 text-base-content">
            {NAVIGATION_LINKS.map(link => <li><a href={link.href}>{link.title}</a></li>)}
            <a class="btn btn-primary mt-4" href={CFP_LINK} target="_blank">Register</a>
        </ul>
    </div>
</div>
