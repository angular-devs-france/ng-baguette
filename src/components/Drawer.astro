---
import Header from "./Header.astro";
import { NAVIGATION_LINKS, ADDRESS, SITE_ACRONYM } from "../consts";
import Footer from "./Footer.astro";
import { getRelativeLocaleUrl } from "astro:i18n";

const locale = Astro.currentLocale!;
const currentPath = Astro.url.pathname;

// Helper function to check if a link is active
function isActiveLink(href: string): boolean {
  const linkPath = getRelativeLocaleUrl(locale, href);
  // Normalize paths (remove trailing slashes for comparison)
  const normalizedCurrentPath = currentPath.replace(/\/$/, "") || "/";
  const normalizedLinkPath = linkPath.replace(/\/$/, "") || "/";
  
  // Handle home page - check if we're on root or locale root
  if (href === "/") {
    return normalizedCurrentPath === "/" || 
           normalizedCurrentPath === `/${locale}` ||
           normalizedCurrentPath === normalizedLinkPath;
  }
  
  // For other pages, check exact match or if current path starts with link path
  return normalizedCurrentPath === normalizedLinkPath || 
         normalizedCurrentPath.startsWith(normalizedLinkPath + "/");
}
---

<div class="drawer">
  <input id="my-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col min-h-screen">
    <Header />
    <div class="flex-1">
      <slot />
    </div>
    <Footer />
  </div>
  <div class="drawer-side z-50">
    <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
    <div class="w-80 min-h-full bg-base-200 text-base-content relative">
      <div class="p-6 border-b border-base-300/50">
        <a href={getRelativeLocaleUrl(locale, "/")} class="flex items-center gap-3 hover:opacity-90 transition-opacity">
        <span class="text-xl sm:text-2xl font-bold title-font tracking-wide">{SITE_ACRONYM}</span>
      </a>
        <div class="text-sm text-base-content/70">
          <p>{ADDRESS.addressLocality}, {ADDRESS.addressCountry}</p>
        </div>
      </div>
      <ul class="menu p-4 gap-1">
        {
          NAVIGATION_LINKS[locale]
            .filter(link => link.condition ? link.condition() : true)
            .map(link => {
              const isActive = isActiveLink(link.href);
              return (
                <li>
                  <a 
                    href={getRelativeLocaleUrl(locale, link.href)}
                    class={`rounded-lg ${isActive ? "bg-primary/10 text-primary font-semibold" : "hover:bg-base-300/50"}`}
                  >
                    {link.title}
                  </a>
                </li>
              );
            })
        }
      </ul>
      <div class="absolute bottom-4 left-4 right-4 flex gap-2">
        <a 
          href="/en" 
          class={`btn btn-sm flex-1 ${locale === "en" ? "btn-primary" : "btn-ghost"}`}
        >
          EN
        </a>
        <a 
          href="/fr" 
          class={`btn btn-sm flex-1 ${locale === "fr" ? "btn-primary" : "btn-ghost"}`}
        >
          FR
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .title-font {
    font-family: "Bangers", sans-serif;
  }
</style>
